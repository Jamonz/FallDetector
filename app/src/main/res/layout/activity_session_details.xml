<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.thetrumannshow.FallDetector.SessionDetailsActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/session_icon"
        android:src="@mipmap/temporary_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/session_icon"
        android:layout_toEndOf="@id/session_icon"
        android:text="Session Name"
        android:id="@+id/session_name" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/layout1"
        android:textSize="24sp"
        android:text="Date and Hour"
        android:id="@+id/data_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/data_time"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:text="Duration"
        android:id="@+id/session_duration" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_duration"
        android:layout_marginTop="32dp"
        android:id="@+id/listView" />

</RelativeLayout>
