<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.esp1415.thetrumannshow.FallDetector.FallDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_layout" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/session_icon"
            android:src="@mipmap/temporary_placeholder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/session_icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/session_icon"
            android:textSize="35sp"
            android:text="Fall Name"
            android:id="@+id/fall_name" />


        <ImageView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/email_is_sent"
            android:src="@mipmap/temporary_placeholder"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/main_layout"
        android:textSize="20sp"
        android:text="Session Name"
        android:id="@+id/session_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/session_name"
        android:textSize="20sp"
        android:text="Data Time"
        android:id="@+id/data_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:text="GPS Data"
        android:layout_below="@id/data_time"
        android:id="@+id/gps_data" />

</RelativeLayout>
